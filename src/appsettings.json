{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "AppDbConnection": "Host=localhost;Port=5432;Database=authDB;User ID=postgres;Password=root;Pooling=true"
  },
  "AuthOptions": {
    "UserServiceEndpoint": "https://user.local.ecommerce:5011",
    "ServerIssuer": "https://auth.local.ecommerce:5001"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
        "Microsoft.Hosting.Lifetime": "Information",
        "Hangfire": "Error"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\auth_service_log_.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext} {NewLine} {Message:lj} {NewLine} {Exception} {NewLine}",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 1000000,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  }
}